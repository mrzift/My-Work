//---Number Pyramid---//
        
     Scanner sc = new Scanner(System.in);
     
     //Taking number of rows from user.
     int n = sc.nextInt();
     
     for (int i=1; i<=n; i++){
            int sum=0;
            for (int j=1; j<=i; j++){
                sum = sum + 1;
                System.out.print(sum+" ");
                // could also just put j in sout()
                // Eg: System.out.println(j);
            }
            System.out.println();
        }
