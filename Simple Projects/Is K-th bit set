public static void isKthBitSet(int n, int k) 
	{ 
		if ((n & (1 << (k - 1))) == 1) 
			System.out.print("SET"); 
		else
			System.out.print("NOT SET"); 
	} 
  
  //--- Method 2---//
  
  static void isKthBitSet(int n, int k) 
{ 
	if (((n >> (k - 1)) & 1) == 1) 
		System.out.println("SET"); 
	else
		System.out.println("NOT SET"); 
} 
